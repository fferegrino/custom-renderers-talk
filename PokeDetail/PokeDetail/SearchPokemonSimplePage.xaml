<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeDetail.SearchPokemonSimplePage">
<ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="0, 20, 0, 0" />
  </ContentPage.Padding>
  <StackLayout>
    <SearchBar x:Name="PokemonSearchBar" />
    <Label x:Name="PokemonNameLabel" HorizontalTextAlignment="Center" />
    <Label x:Name="PokemonDescriptionLabel"  HorizontalTextAlignment="Center"/>
    <Label x:Name="PokemonShapeLabel" HorizontalTextAlignment="Center"/>
    <Button x:Name="ClearInfoButton" Text="Clear" IsVisible="true"/>
  </StackLayout>
</ContentPage>